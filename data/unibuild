#!/bin/bash
paksrc="$HOME/Dev"
paktgt="$HOME/pCloudDrive"
myarc="$(dpkg --print-architecture)"
mypass=()
myfail=()
i_tgts=()

# begin scrape functions
lsrmt () {
test -d "$paksrc/$pakfunc/.git" && pakver="$(git -C "$paksrc/$pakfunc" ls-remote -q --tags --refs | grep -Pio '(\d+(\.|_|-|$)){2}[\w\.-]*' | perl -pe 's|[[:punct:]]|.|g' | sort -V | tail -1)"
test -d "$paksrc/$pakfunc/.hg" && pakver="$(hg -R "$paksrc/$pakfunc" hg tags | grep -Pio '(\d+(\.|_|-|$)){2}[\w\.-]*' | perl -pe 's|[[:punct:]]|.|g' | sort -V | tail -1)"
}
#pulls remote tag for repeating pattern, digits._-alpnums._-, replacing punctuation with dots

cmklst () {
pakver="$(grep -Pio '^set.*(maj|min|pat).*\d+' "$paksrc/$pakfunc/$pakver" | grep -Pio '\d+$' | perl -pe 's|\s|.|' | perl -pe 's|(.*)\.$|\1|')"
}
#match complex multi-line pattern ending with version digits, add dots and remove trailing dot

cfgac () {
pakver="$(awk -v ORS="" -F, '/AC_INIT\(/,/\)/{gsub(/[[:alpha:][:blank:]]/,"");print}' "$paksrc/$pakfunc/$pakver" | grep -Pio '\d+\.[[:alnum:]\.]+')"
}
#pulls line starting with AC_INIT from outer to inner parenthesis, stripping non-digits, matching repeating pattern, digits.alnums

oneln () {
pakver="$(grep -Pio "$pre.*\b.*\d+\.[[:alnum:]\.]+" "$paksrc/$pakfunc/$pakver" | grep -Pio '\d+\.[[:alnum:]\.]+')"
#pakver="$(perl -ne "print if s/.*$pre.+?(\d+\.[[:alnum:]\.]+).*/\1/gi" "$paksrc/$pakfunc/$pakver")"
}
#uses pre to match complex pattern with version digits then matches repeating pattern, digits.alnums

fewln () {
pakver="$(grep -Pio "$pre.*\b.*\d+" "$paksrc/$pakfunc/$pakver" | grep -Pio '\d+$' | perl -pe 's|\s|.|' | perl -pe 's|(.*)\.$|\1|')"
}
#uses pre to match complex multi-line pattern ending with version digits, adds dots and removes trailing dot

bignm () {
pakver="$(grep -Pio "$pre.*\d+" "$paksrc/$pakfunc/$pakver" | grep -Pio '\d+$' | perl -pe "s|(\d{$post})|\1.|g" | perl -pe 's/\b0*([1-9]\d*\b)|\b0*(0\b)/\1\2/g' | perl -pe 's|(.*)\.$|\1|')"
}
#uses pre to match complex pattern reduced to long string of digits broken into digit groups of size specified by post and terminated with dots, removes leading zeros except when only zeros are present, then removes trailing dot
# end scrape functions

# begin program functions
depch () {
if [[ -d "$(realpath -q "$paksrc/$value")" ]]; then
  mypch="$(find "$paksrc" -maxdepth 1 -type f \( -iname "${value#_}.patch" -o -iwholename "$(echo "$(realpath "$paksrc/$value")" | perl -pe "s|\Q$paksrc\E/[_]*(.+?)[/\v].*|\1|").patch" \))"
fi
#find patch maching unheld project name (actual and symlink)
if [[ -f "$mypch" ]]; then
  export mypatd="$(dirname $mypch)"
  readarray -t i_tgts < <(grep -B20 -m1 -P '^diff' "$mypch")
  for i in ${!i_tgts[@]}; do
    if [[ -z "$(echo "${i_tgts[$i]}" | grep -Pio '^diff')" ]]; then
      (cd "$mysrc" && echo "${i_tgts[$i]}" | perl -pe 's/\r$//' | xargs -i -r sh -c "{}")
    fi
  done
  unset i_tgts
  unset mypatd
fi
mypch=""
#reset to avoid inheritance
}
#apply patch directives

mychin () {
echo "$pakdesc" | tee description-pak
pakuser="$(echo -n "$pakuser" | perl -pe 's/([[:punct:]])/\\\1/g')"
pakneeds="$(echo -n "$pakneeds" | perl -pe 's/([[:punct:]])/\\\1/g')"
# escape all punctuation in fields pakuser, pakneeds for checkinstall compatibility
sudo checkinstall -D --exclude="/home/*" --default --backup=no --nodoc --pkgname="$pakfunc" --pkgversion="$pakver" --pkgrelease="$pakrel" --pkglicense="$paklic" --pkggroup="$pakgrp" --pkgsource="$pakhome" --maintainer="$pakuser" --provides="$pakfunc" --requires="$pakneeds" --spec="" $pakmak $pakinst
sudo chown -R "$LOGNAME:$LOGNAME" ""$pakfunc"_"$pakver"-"$pakrel"_"*.deb
if [[ $? -eq 1 ]]; then
  myfail+=("$pakfunc")
  mv "$paksrc/$pakfunc" "$paksrc/_$pakfunc"
  paklnk="$(find "$paksrc" -maxdepth 1 -type l -printf '%l - %P\n' | grep -Pio "(?<=$pakfunc - ).*")"
  # match root project to root link
  # project outside of root and root link names must match
  if [[ -n "$paklnk" ]]; then
    test "$pakfunc" != "${paklnk#_}" && ln -sf "$paksrc/_$pakfunc" "$paksrc/$paklnk"
    # if unheld link differs from project, update after move
    paklnk=""
  fi
  pakfunc="_$pakfunc"
else
  mypass+=("$pakfunc")
  test "$pakhld" = "1" && sudo apt-mark hold "$pakfunc"
  # restore hold status
  pakhld=""
fi
# take ownership of deb in current dir which isn't necessarily paksrc/pakfunc
find "$paksrc/$pakfunc" -user root -group root -exec sudo chown -h "$LOGNAME:$LOGNAME" {} \;
# checkinstall runs as root so take ownership of artifacts after build
rm description-pak
}

myfpm () {
pakdirs="$(ls -d */ | sed -e 's|/||g')"
fpm -s dir -t deb --deb-compression xz -n "$pakfunc" -v "$pakver" --iteration "$pakrel" -d "$pakneeds" -m "$pakuser" --license "$paklic" --url "$pakhome" --vendor "$pakfunc" --description "$pakdesc" --category "$pakgrp" --deb-priority optional $pakdirs
}

mybldr () {
(dpkg -l "$pakfunc" 2>/dev/null | grep -Pioq "^hi\s+$pakfunc") && pakhld="1"
# check if pkg was held
(dpkg -l "$pakfunc" &>/dev/null) && sudo apt purge -y --allow-change-held-packages "$pakfunc"
# forcibly purge installed pkg
pakmak="make -C $paksrc/$pakfunc/$pakmak"
eval "$pakmak $pakcln"
eval "$pakmak $pakbld"
# clean then build
}

myclnr () {
IFS=$'\n'
find "$paksrc" -user root -group root -exec sudo chown -h "$LOGNAME:$LOGNAME" {} \;
# checkinstall runs as root so take ownership of artifacts before clean
for value in $(find "$paksrc" -maxdepth 1 -mindepth 1 -type d ! \( -ipath '*/debian*' \) -printf '%f\n' | sort); do
  pakfunc="$value"
  if [[ "$(type -t $pakfunc)" = function ]]; then
    $pakfunc
    pakmak="make -C $paksrc/$pakfunc/$pakmak"
    eval "$pakmak $pakcln"
  fi
done
unset IFS
}

mypkgr () {
test -d "$paksrc/debian" || mkdir -p "$paksrc/debian"
test -f "$paksrc/debian/control" || touch "$paksrc/debian/control"
# create debian/control in paksrc as needed
IFS=$'\n'
for value in $(find -H "$paksrc/$pakfunc" -type f ! \( -ipath '*/tmp*' -o -ipath '*/temp*' -o -ipath '*/test*' -o -ipath '*/obj*' -o -ipath '*/cmakefiles*' -o -ipath '*/debian*' -o ! -iname 'lib*.so*' \) -execdir pwd \;); do
  ldir="-l$value "$ldir
done
unset IFS
ldir="$(echo -n "$ldir" | perl -lane '$,=$";print grep { ! $h{$_}++ } @F')"
# create library includes for shlibdeps by uniquifing folders containing libs
IFS=$'\n'
for value in $(find -H "$paksrc/$pakfunc" -type f ! \( -ipath '*/tmp*' -o -ipath '*/temp*' -o -ipath '*/test*' -o -ipath '*/obj*' -o -ipath '*/cmakefiles*' -o -ipath '*/debian*' \) -executable -exec sh -c 'readelf -l "$1" 2>/dev/null | grep -qPio "executable|shared" && printf "$1\n"' -- {} \;); do
  pakneeds="$(cd "$paksrc" && dpkg-shlibdeps "$ldir" -O --ignore-missing-info "$value" 2>/dev/null | perl -pe "s/^shlibs:Depends=|\s\(.+?\)//g" | perl -pe 's|^(.*)$|\1, |')"$pakneeds
done
unset IFS
  pakneeds="$(echo -n "$pakneeds" | perl -pe 's|(?<!,)\s|/|g' | perl -lane '$,=$";print grep { ! $h{$_}++ } @F' | tr '/' ' ' | perl -pe 's|(.*),$|\1|')"
#  pakneeds="$(echo $(echo -n "$pakneeds" | perl -pe 's|(?<!,)\s|/|g' | tr ' ' '\n' | sort | uniq)| tr '/' ' ' | perl -pe 's|(.*),$|\1|')"
# pass binary executables and libraries to shlibdeps then uniquify resulting dependencies, version numbers need to be truncated
test -d "$paksrc/$pakfunc/.git" && pakver="$pakver~git$(git -C "$paksrc/$pakfunc" show -s --pretty=format:%h | head -c7)"
test -d "$paksrc/$pakfunc/.hg" && pakver="$pakver~hg$(hg -R "$paksrc/$pakfunc" identify -i | head -c7)"
test -d "$paksrc/$pakfunc/.svn" && pakver="$pakver~svn$(svnversion "$paksrc/$pakfunc" | grep -Pio '\d+' | md5sum | head -c7)"
# create pakver as identifier for repo type and shortened 7 character commit hash
if [[ "$PWD" =~ work ]]; then
  myfpm
else
  mychin
fi
}

myupdr () {
IFS=$'\n'
for value in $(find "$paksrc" -maxdepth 1 -mindepth 1 -type l,d ! \( -ipath '*/debian*' \) -printf '%f\n' | sort); do
# pull list of dirs/projects in source folder
  myprj="$value"
  # project name is search result
  mydir="$(find "$paksrc" -maxdepth 1 -type l,d \( -ipath "*${value#_}" \) -execdir realpath "{}" \; | perl -pe "s|\Q$paksrc\E/*(.+?)[/\v].*|$paksrc/\1|")"
  #resolve links to root projects or external path
  for mysrc in $(find -H "$mydir" -maxdepth 1 -type d \( -iname .git -o -iname .hg -o -iname .svn \) -execdir realpath . \;); do
    # from list of dirs in paksrc continue if git/hg/svn found
    if [[ -d "$mysrc/.git" ]]; then
      myhead="$(git -C "$mysrc" rev-parse --abbrev-ref HEAD)"
      # get the local head
      myrmt="$(git -C "$mysrc" ls-remote -q -h origin "$myhead" | grep -Pi "refs/heads/$myhead" | head -c7)"
      # create 7 char commit hash from the remote head that matches local
      mylcl="$(git -C "$mysrc" show -s --pretty=format:%h | head -c7)"
      # create local 7 char commit hash
      if [[ -n "$mylcl" && -n "$myrmt" && "$mylcl" != "$myrmt" ]]; then
        echo -e "\n** $mysrc **"
        git -C "$mysrc" pull
        if [[ $? -eq 1 ]]; then
          git -C "$mysrc" reset --hard
          git -C "$mysrc" pull
          depch
        fi
      fi
    elif [[ -d "$mysrc/.hg" ]]; then
      myhead="$(hg -R "$mysrc" paths | grep -Pio 'http.*$')#$(hg -R "$mysrc" identify -b)"
      # get the remote url
      myrmt="$(hg -R "$mysrc" identify "$myhead" | head -c7)"
      # create 7 char commit hash from remote url
      mylcl="$(hg -R "$mysrc" identify -i | head -c7)"
      # create local 7 char commit hash
      if [[ -n "$mylcl" && -n "$myrmt" && "$mylcl" != "$myrmt" ]]; then
        echo -e "\n** $mysrc **"
        hg -R "$mysrc" pull -u
        if [[ $? -eq 1 ]]; then
          hg -R "$mysrc" revert -a --no-backup
          hg -R "$mysrc" pull -u
          depch
        fi
      fi
    elif [[ -d "$mysrc/.svn" ]]; then
      myhead="$(svn info "$mysrc" | grep -Pio '(?<=^URL: ).*')"
      # get the remote url
      myrmt="$(svn info "$myhead" | grep -Pio '(?<=Revision: )\d+' | md5sum | head -c7)"
      # create 7 char md5 commit hash from remote url revision
      mylcl="$(svnversion "$mysrc" | grep -Pio '\d+' | md5sum | head -c7)"
      # create local 7 char md5 commit hash from local revision
      if [[ -n "$mylcl" && -n "$myrmt" && "$mylcl" != "$myrmt" ]]; then
        echo -e "\n** $mysrc **"
        svn update "$mysrc"
        if [[ $? -eq 1 ]]; then
          svn revert --recursive "$mysrc"
          svn update "$mysrc"
          depch
        fi
      fi
    fi
    mydeb=$(find -H "$paktgt" -type f -regextype posix-extended ! \( -ipath '*.cache*' \) -iregex ".*/"$myprj"_.*"$myarc".*\.deb" -printf '%f')
    # check tgtdir for deb matching project name
    mychk="$(echo "$mydeb" | grep -Pio '(?<=~git|~svn|~hg)[[:alnum:]]{7}')"
    # strip hash from deb
    if [[ -n "$mychk" && -n "$myrmt" && "$mychk" != "$myrmt" ]]; then
      pakfunc="$myprj"
      if [[ "$(type -t $pakfunc)" = function ]]; then
        $pakfunc
        mybldr
        mypkgr
      fi
    fi
  done
done
unset IFS
# key on deb as it's persistent, update if local and remote differ
# build if local source and archived deb differ
}

mymvr () {
IFS=$'\n'
for value in $(find -L "$paksrc" -maxdepth 3 -type f -iname '*.deb' -printf '%p\n' 2>/dev/null); do
# list found debs by full path and loop until all are processed
  mydeb="$(echo "$value" | perl -pe 's|.*/([\w-]+)_.*$|\1|')"
  # strip out filename from last forward slash until underscore
  myhash=$(find -H "$paktgt" -type f -regextype posix-extended ! \( -ipath '*.cache*' \) -iregex ".*/"$mydeb"_.*"$myarc".*\.deb" ! -newer "$value" | head -1)
  # myhash is full path to first matching older deb in paktgt
  if [[ -n "$myhash" ]]; then
    tmpdir="$(echo "$myhash" | grep -Pio "(?<=$paktgt/).*(?=/$mydeb)")"
    # make tmpdir the portion of the path between paktgt and filename
    find -H "$paktgt" -type f -regextype posix-extended ! \( -ipath '*.cache*' \) -iregex ".*/"$mydeb"_.*"$myarc".*\.deb" -exec trash "{}" \;
    # trash any matching debs in paktgt
    mv "$value" "$paktgt/$tmpdir/"
  fi
done
unset IFS
}

# end program functions
# begin database functions

acpilight () {
pakuser="Yuri D'Elia <wavexx@thregr.org>"
pakdesc="A backward-compatibile xbacklight replacement."
pakver="" ; lsrmt
pakrel="1"
paklic="GPLv3"
pakgrp="utils"
pakneeds="libc6, libxcb-randr0, libxcb-util1, libxcb1"
pakhome="https://github.com/wavexx/acpilight"
pakmak=""
pakcln="clean"
pakbld="-j4"
pakinst="install"
}
#Build-Depends: libc6-dev libxcb1-dev libxcb-randr0-dev libxcb-util-dev

