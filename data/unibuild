#Build-Depends: cmake g++ libbz2-dev libfluidsynth-dev libgl1-mesa-dev libglew-dev libgtk2.0-dev libjpeg-dev libsdl1.2-dev libssl-dev make mercurial nasm tar timidity zlib1g-dev

# end database functions
# begin main script

# Project folder and name must match and be in $paksrc. FPM handles subfolder named work.
# Sym-Link non-conformant projects to maintain folder/function format.
# All functions must be defined prior to the following code.

if [[ -d "$paksrc" && -d "$paktgt" ]]; then
  pakfunc="$(pwd | perl -pe "s|\Q$paksrc\E/(.+?)[/\v].*|\1|")"
  paksrc="$(realpath "$paksrc")"
  paktgt="$(realpath "$paktgt")"
  mydir="$(realpath .)"
  # define pakfunc as first folder after paksrc from current directory
  if [[ "$(type -t $pakfunc)" = function ]]; then
    $pakfunc
    mybldr
    mypkgr
    mymvr
  elif [[ "$mydir" = "$paksrc" ]]; then
    read -r -p "Clean all packages? [y/N] " chse
    if [[ "$chse" =~ ^([yY][eE][sS]|[yY])+$ ]]; then
      echo "Cleaning all packages."
      chse=""
      myclnr
    else
      echo "Aborted."
    fi
  else
    read -r -p "Update all packages? [y/N] " chse
    if [[ "$chse" =~ ^([yY][eE][sS]|[yY])+$ ]]; then
      echo "Updating and rebuilding all packages."
      echo "This could take awhile ..."
      chse=""
      cd "$paksrc"
      myupdr
      mymvr
    else
      echo "Aborted."
    fi
  fi
  if [[ ${#mypass[@]} -gt 0 ]]; then
    printf "\nBuild successful:\n"
    printf '%s\n' "${mypass[@]}" | sort
  fi
  if [[ ${#myfail[@]} -gt 0 ]]; then
    printf "\nBuild failed:\n"
    printf '%s\n' "${myfail[@]}" | sort
    printf "\nUse repochk -h to reset held projects.\n"
  fi
  unset mypass
  unset myfail
else
  test -d "$paksrc" || echo "Source tree $paksrc doesn't exist."
  test -d "$paktgt" || echo "Backup folder $paktgt doesn't exist."
fi
#in project folder build, in source folder ask to clean, otherwise ask to rebuild
#error out if source or backup folders are missing
