diff a/pcsx2/PKGBUILD b/pcsx2/PKGBUILD
--- a/pcsx2/PKGBUILD	1969-12-31 17:00:00.000000000 -0700
+++ b/pcsx2/PKGBUILD	1969-12-31 17:00:00.000000000 -0700
@@ -0,0 +1,67 @@
+# Maintainer: Noa Body <noabody@archlinux.org>
+
+pkgname=pcsx2
+pkgver=1.7.3175.r0.g147881925
+pkgrel=1
+pkgdesc='A Sony PlayStation 2 emulator'
+arch=(x86_64)
+url=https://www.pcsx2.net
+license=(GPL2 GPL3 LGPL2.1 LGPL3)
+depends=(fmt libaio libgl libpcap libpulse libzip qt6-base
+         rapidyaml sdl2 soundtouch wayland xorg-xrandr zstd)
+makedepends=(cmake git ninja python swig xorgproto)
+source=(git+https://github.com/PCSX2/pcsx2.git
+        git+https://github.com/mozilla/cubeb.git
+        git+https://github.com/KhronosGroup/glslang.git
+        git+https://github.com/ocornut/imgui.git
+        git+https://github.com/rtissera/libchdr.git
+        vulkan-headers::git+https://github.com/KhronosGroup/Vulkan-Headers.git
+        "$pkgname".patch)
+sha256sums=(SKIP
+            SKIP
+            SKIP
+            SKIP
+            SKIP
+            SKIP
+            '06d59392f66ca7bc6e4b191740336153e124fb338cf9f2ecb711fbfb7a7466fa')
+
+pkgver() {
+  cd "$pkgname"
+  git describe --tags | sed 's/^v//'
+}
+
+prepare() {
+  patch -Np1 -i "$pkgname".patch
+  test ! -d "$pkgname/build" || rm -rf "$pkgname"/build
+  cd "$pkgname"/3rdparty
+  for submodule in cubeb/cubeb glslang/glslang imgui/imgui libchdr/libchdr vulkan-headers; do
+    git submodule init ${submodule}
+    git config submodule.${submodule}.url ../../${submodule#*/}
+    git submodule update ${submodule}
+  done
+}
+
+build() {
+  cmake -S "$pkgname" -B "$pkgname"/build -G Ninja \
+    -DCMAKE_BUILD_TYPE=Release \
+    -DCMAKE_INSTALL_PREFIX=/usr \
+    -DCMAKE_INTERPROCEDURAL_OPTIMIZATION=ON \
+    -DDISABLE_ADVANCE_SIMD=ON \
+    -DDISABLE_BUILD_DATE=ON \
+    -DDISABLE_PCSX2_WRAPPER=ON \
+    -DDISABLE_SETCAP=ON \
+    -DENABLE_TESTS=OFF \
+    -DPACKAGE_MODE=ON \
+    -DQT_BUILD=ON \
+    -DUSE_SYSTEM_LIBS=ON \
+    -DUSE_VTUNE=OFF \
+    -DXDG_STD=ON \
+    -DCMAKE_SKIP_RPATH=ON \
+    -Wno-dev
+  ninja -C "$pkgname"/build -j$(nproc)
+}
+
+package() {
+  DESTDIR="$pkgdir" cmake --install "$pkgname"/build
+  sed -i 's/Exec=env GDK_BACKEND=x11 MESA_NO_ERROR=1 pcsx2/Exec=env QT_QPA_PLATFORM=xcb MESA_NO_ERROR=1 pcsx2-qt/g' "$pkgdir"/usr/share/applications/PCSX2.desktop
+}
