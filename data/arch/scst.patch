+# Maintainer: Noa Body <noabody@archlinux.org>
+
+pkgbase=scst
+pkgname=("$pkgbase" "$pkgbase"admin "$pkgbase"-dkms)
+pkgver=3.9.r57.gd0b970f
+pkgrel=1
+pkgdesc="Generic SCSI Target Subsystem For Linux"
+arch=(x86_64)
+url='http://scst.sourceforge.net'
+license=(GPL-1.0-or-later)
+#install="$pkgbase".install
+makedepends=(linux linux-headers)
+options=(!emptydirs)
+source=(git+https://github.com/SCST-project/scst.git
+        dkms.conf)
+sha256sums=('SKIP'
+         '99372a5d3f6190d486a941ef54b5b8c780ab49ecd9cc2128853a20442c69bba8')
+
+pkgver() {
+  cd "$pkgbase"
+  git describe --long --abbrev=7 --tags | sed 's/^v//;s/_/./;s/\([^-]*-g\)/r\1/;s/-/./g'
+}
+
+
+prepare() {
+  cd "$pkgbase"
+  make clean
+  grep -rlZ sbin . | xargs -0 sed -i 's/sbin/bin/g'
+}
+
+build() {
+  cd "$pkgbase"
+  # Fix problem with scstadmin
+  unset PERL_MM_OPT
+
+  export KVER=$(uname -r) PREFIX=/usr MANDIR=/usr/share/man
+  export BUILD_2X_MODULE=y CONFIG_SCSI_QLA_FC=y CONFIG_SCSI_QLA2XXX_TARGET=y
+  make 2release -j$(nproc)
+  for d in "$pkgbase" fcst iscsi-"$pkgbase" qla2x00t-32gbit/qla2x00-target "$pkgbase"_local srpt; do
+    make -C $d -j$(nproc)
+  done
+  export PREFIX=/usr DESTDIR="$pkgdir" MANDIR=/usr/share/man
+  make -C "$pkgbase"admin -j$(nproc)
+}
+
+package_scst() {
+  pkgdesc='Generic SCSI Target Subsystem For Linux'
+  depends=(glibc)
+  arch=(x86_64)
+
+  cd "$pkgbase"
+  export KVER=$(uname -r) PREFIX=/usr MANDIR=/usr/share/man DEPMOD=true
+  export BUILD_2X_MODULE=y CONFIG_SCSI_QLA_FC=y CONFIG_SCSI_QLA2XXX_TARGET=y
+  DESTDIR="$pkgdir" make -C "$pkgbase" install
+  for d in fcst iscsi-scst qla2x00t-32gbit/qla2x00-target scst_local srpt; do
+    DESTDIR="$pkgdir" INSTALL_MOD_PATH="$pkgdir" make -C $d install
+  done
+  rm -rf "$pkgdir"/lib
+}
+
+package_scstadmin() {
+  pkgdesc='Administration utility for SCST'
+  depends=(bash perl)
+  arch=(any)
+
+  export PREFIX=/usr DESTDIR="$pkgdir" MANDIR="$pkgdir"/usr/share/man
+  make -C "$pkgbase/$pkgname" install_vendor
+  rm -rf "$pkgdir"/usr/lib
+}
+
+package_scst-dkms() {
+  depends=(bash dkms linux-headers)
+  provides=("$pkgname")
+
+  make -C "$pkgbase" clean
+  install -Dm 644 dkms.conf -t "$pkgdir"/usr/src/"$pkgname"
+  cp -dr --no-preserve=ownership "$pkgbase"/{fcst,iscsi-"$pkgbase",qla2x00t-32gbit,"$pkgbase","$pkgbase"_local,srpt,Makefile} "$pkgdir"/usr/src/"$pkgname"/
+
+  sed -e "s/@PKGNAME@/$pkgbase-dkms/" \
+      -e "s/@PKGVER@/$pkgver/" \
+      -i "$pkgdir/usr/src/$pkgname/dkms.conf"
+}
