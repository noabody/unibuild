+# Maintainer: Noa Body <noabody@archlinux.org>
+
+pkgname=gemrb
+pkgver=0.8.6.r58.ge90f850e0
+pkgrel=1
+pkgdesc='Game Engine Made with preRendered Background, open source Infinity Engine.'
+arch=(x86_64)
+url=http://www.gemrb.org
+license=(GPL2)
+depends=(freetype2 glew hicolor-icon-theme libpng openal
+         perl-rename python2 sdl2_mixer vlc xorg-fonts-misc)
+makedepends=(cmake freetype2 git glew libpng mesa openal
+             python2 sdl2 sdl2_mixer libvorbis vlc zlib)
+source=(
+  "$pkgname"::git+https://github.com/"$pkgname/$pkgname".git
+  "$pkgname".config
+  "$pkgname".sh
+)
+provides=($pkgname)
+replaces=("$pkgname"-git)
+conflicts=("$pkgname"-git)
+sha256sums=('SKIP'
+            '783109d14a5083f576f365e83e4c8446751f7fcb1e389a0e050a66e9e5334b6b'
+            '132a984e1e66919f15e0ab46d6ac738166d7301ea1217580e9b008b1ef7ef3f6')
+
+pkgver() {
+  cd "$pkgname"
+  git describe --long --tags | sed 's/^v//;s/_/./;s/\([^-]*-g\)/r\1/;s/-/./g'
+}
+
+prepare() {
+  cd "$pkgname"
+  sed -i "1s/python$/&2/" admin/extend2da.py
+  test ! -d "build" || rm -rf build
+  perl -pi -e 's/(.*include \<string\>.*)$/\1\n#include <cassert>/g' gemrb/core/System/String.h
+}
+
+build() {
+  cmake -S "$pkgname" -B "$pkgname"/build \
+    -DCMAKE_BUILD_TYPE=Release \
+    -DCMAKE_INSTALL_PREFIX=/usr \
+    -DDISABLE_WERROR=1 \
+    -DSDL_BACKEND=SDL2 \
+    -DOPENGL_BACKEND=None
+  make -C "$pkgname"/build -j4
+}
+
+package() {
+  make DESTDIR="$pkgdir" -C "$pkgname"/build  install
+  install -m 755 "$pkgname".sh "$pkgdir"/usr/share/"$pkgname"/
+  install -m 644 "$pkgname".config "$pkgdir"/etc/"$pkgname"/config
+  perl -pi -e "s|(^Exec=).*|\1/usr/share/"$pkgname/$pkgname".sh|g" "$pkgdir"/usr/share/applications/"$pkgname".desktop
+}
