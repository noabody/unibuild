+# Maintainer: Noa Body <noabody@archlinux.org>
+
+pkgname=indicator-keylock
+pkgver=3.1.1
+pkgrel=1
+pkgdesc='An indicator that displays the status of the keyboard lock keys'
+arch=(x86_64 i686)
+url=https://code.launchpad.net/~tsbarnes/indicator-keylock
+license=(GPL-3.0-only)
+depends=(dconf gtk3 hicolor-icon-theme libappindicator-gtk3 libnotify libx11)
+makedepends=(git)
+provides=($pkgname)
+conflicts=($pkgname)
+optdepends=('notification-daemon: for notificiations')
+backup=()
+options=()
+source=(https://code.launchpad.net/~tsbarnes/+archive/ubuntu/indicator-keylock-daily/+sourcefiles/indicator-keylock/3.1.1+207-0~ppadaily+202008020636~ubuntu16.04.1/indicator-keylock_3.1.1+207-0~ppadaily+202008020636~ubuntu16.04.1.tar.xz)
+sha1sums=('SKIP')
+
+prepare() {
+  cd "$pkgname"*/
+  # the tarball is plain from the repository, without configure
+  ./autogen.sh
+  make clean
+}
+
+build() {
+  cd "$pkgname"*/
+  ./configure --prefix=/usr \
+    --sysconfdir=/etc \
+    --disable-schemas-compile
+  make -j$(nproc) CFLAGS+=' -fcommon'
+}
+
+package() {
+  cd "$pkgname"*/
+  make DESTDIR="$pkgdir"/ install
+}

