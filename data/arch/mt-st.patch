diff a/mt-st/PKGBUILD b/mt-st/PKGBUILD
--- a/mt-st/PKGBUILD	1969-12-31 17:00:00.000000000 -0700
+++ b/mt-st/PKGBUILD	1969-12-31 17:00:00.000000000 -0700
@@ -0,0 +1,43 @@
+# Maintainer: Noa Body <noabody@archlinux.org>
+
+pkgname=mt-st
+pkgver=1.4.r10.gfbfd923
+pkgrel=1
+pkgdesc='Utilities for managing magnetic tape storage devices'
+arch=(x86_64)
+url="https://github.com/iustin/$pkgname"
+license=(GPL-2.0-or-later)
+depends=(tar)
+makedepends=(git)
+provides=("$pkgname")
+conflicts=("$pkgname".git)
+source=(git+"$url".git)
+md5sums=('SKIP')
+sha256sums=('SKIP')
+
+pkgver() {
+    cd "$pkgname"
+  #printf '%s.r%s.g%s' "$(sed -ne 's:^#define VERSION "\(.*\)"$:\1:p' "mt.c")" "$(git rev-list --count HEAD)" "$(git describe --always )" # '
+  git describe --long | sed -E -e 's/^v//' -e 's/[^-]+-g/r&/' -e 's/-/./g'
+}
+
+prepare() {
+  cd "$pkgname"
+  #sed -e 's:^#include <sys/types.h>$:#include <sys/sysmacros.h>\n&:g' -i 'mt.c'
+  sed -E \
+    -e '/^SBINDIR=/ s:/sbin:/usr/bin:g' \
+    -e '/^BINDIR=/ s:/bin:/usr/bin:g' \
+    -e '/^COMPLETIONINSTALLDIR=/ s:/etc/bash_completion.d:/usr/share/bash-completion/completions:g' \
+    -i Makefile
+}
+
+build() {
+  cd "$pkgname"
+  make
+}
+
+package() {
+  cd "$pkgname"
+  make DESTDIR="$pkgdir" install
+  mv "$pkgdir"/usr/share/bash-completion/completions/{mt-st,mt}
+}
