+# Maintainer: Noa Body <noabody@archlinux.org>
+
+pkgname=tkfilebrowser
+pkgver=0.5.0.r0.gc22819d
+pkgrel=1
+pkgdesc='Tkinter file browser GUI'
+arch=(any)
+url=https://github.com/KBNLresearch/tkfilebrowser
+license=(GPL-3.0-only)
+makedepends=(python-build python-installer python-wheel)
+depends=(python tk python-pillow python-psutil python-babel)
+source=(tkfilebrowser::git+https://github.com/j4321/tkFileBrowser.git)
+sha256sums=('SKIP')
+
+pkgver() {
+  cd "$pkgbase"
+  git describe --long --abbrev=7 --tags | sed 's/^v//;s/_release//;s/_/./;s/\([^-]*-g\)/r\1/;s/-/./g'
+}
+
+prepare() {
+  cd "$pkgname"
+#  perl -pi -e 's/-/_/g' setup.cfg
+}
+
+build() {
+  cd "$pkgname"
+  rm -rf dist # clean up old builds so dist/*.whl works in package
+  python -m build --wheel --no-isolation
+}
+
+package() {
+  cd "$pkgname"
+  python -m installer --destdir="$pkgdir" dist/*.whl
+}
